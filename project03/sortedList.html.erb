<html>
<head>
	<title>Top 100 albums</title>
</head>
<body>
	<h1>Rolling Stone's Top 100 Albums of All Time</h1>
	<br/>
	<h3>Sorted by <%= sort %></h3>
	<table>
		<% albums.each do |album| %>
		<tr>
			<td><%= album['rank'] %></td>
			<td><%= album['title'] %> </td>
			<td><%= album['year'] %> </td>
		</tr>
		<% end %>
	</table>
</body>
</html>